@model Article

@{
    ViewData["Title"] = "Home Page";
}

<style>
    .header-h1 {
        position: relative;
        margin-bottom: .5rem;
    }

        .header-h1 h1 {
            font-size: 1.5rem;
            margin-bottom: 0;
            padding-left: 3rem;
            color: #0000FF;
        }

            .header-h1 h1::before {
                content: "";
                position: absolute;
                left: 0;
                top: 0;
                width: 2.25rem;
                height: 2.25rem;
                background: #0000FF;
            }

            .header-h1 h1::after {
                content: "";
                position: absolute;
                left: 0;
                top: 2rem;
                width: 100%;
                height: .25rem;
                background-color: #0000FF;
            }
</style>

<div class="header-h1">
    <h1>@Model.Title</h1>
    <br />
    @if (@Model.Image != null)
    {
        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Image))" />
    }
    <p class="card-subtitle mb-2 text-muted">@Model.Description</p>
    <br />
    <p class="card-text">@Model.Content</p>
    <label><b>Category:</b></label>
    @if (Model.Category.IsDeleted == 0)
    {
        <p>@Model.Category.Title</p>
    }
    <label><b>Date of publication:</b></label>
    <p>@Model.DateTime</p>
    <label><b>Tag:</b></label>
    <ul class="list-group list-group-flush">
        @foreach (var t in @Model.Tags)
        {
            if (t.IsDeleted == 0)
            {
                <li class="list-group-item">@t.Title</li>
            }
        }
    </ul>
</div>

