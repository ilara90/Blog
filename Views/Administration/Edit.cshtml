@using Blog.Models.Views
@model EditViewModel

@{
    ViewData["Title"] = "Edit Article";
}

<form asp-antiforgery="true" asp-action="Edit" asp-controller="Administration" method="post" enctype="multipart/form-data">
    @Html.HiddenFor(x => x.DateTime)
    <b>
        <label for="title">Name article</label>
    </b>
    <br />
    <input type="text" class="form-control" name="Title" value="@Model.Title">
    <b>
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </b>
    <br />
    <b>
        <label for="title">Short Description article</label>
    </b>
    <br />
    <textarea rows="2" cols="20" placeholder="Short Description article (max length 250 symbol)" name="Description" maxlength="250" class="form-control">@Model.Description</textarea>
    <b>
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
    </b>
    <br />
    <b>
        <label for="title">Text article</label>
    </b>
    <br />
    <textarea rows="15" cols="20" placeholder="Text article" name="Content" class="form-control">@Model.Content</textarea>
    <b>
        @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
    </b>
    <br />
    <b>
        <label for="title">Select a category</label>
    </b>
    <br />
    @Html.DropDownListFor(x => x.CategoryId, Model.Categories)
    <b>
        @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
    </b>
    <br />
    <b>
        <label for="title">Select a tag</label>
    </b>
    <br />
    @Html.ListBoxFor(x => x.TagIds, Model.Tags)
    <br />
    <b>
        <label>Replace the image</label>
    </b>
    <input type="file" name="ImageFile" value="Upload" class="btn btn-primary" />
    <br />
    <br />
    <input type="submit" value="Save" class="btn btn-primary" />
</form>

@section scripts{
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}