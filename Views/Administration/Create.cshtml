@using Blog.Models.Views
@model CreateViewModel

@{
    ViewData["Title"] = "Create Article";
}

<form asp-antiforgery="true" asp-action="Create" asp-controller="Administration" method="post" enctype="multipart/form-data">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <label>Name article</label>
    <br />
    <input type="text" class="form-control" name="Title" placeholder="Name article">
    <b>
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </b>    
    <br />
    <label>Short Description article</label>
    <br />
    <textarea rows="2" cols="20" placeholder="Short Description article (max length 250 symbol)" name="Description" maxlength="250" class="form-control"></textarea>
    <b>
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
    </b> 
    <br />
    <label>Text article</label>
    <br />
    <textarea rows="15" cols="20" placeholder="Text article" name="Content" class="form-control"></textarea>
    <b>
         @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
    </b> 
    <br />
    <label>Select a category</label>
    <br />
    @Html.DropDownList("CategoryId", @Model.Categories, "Select a category")
    <br />
    <label>Select a tag</label>
    <br />
    @Html.ListBoxFor(x => x.TagIds, Model.Tags)
    <br />
    <label>Upload an image</label>
    <input type="file" name="ImageFile" value="Upload" class="btn btn-primary" />
    <br />
    <input type="submit" value="Add" class="btn btn-primary" />
</form>

@section scripts{
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
